package conversorMonedas;

import javax.swing.JOptionPane;

public class TipoUnidadTemperatura {
	String unidadEntrada = (JOptionPane.showInputDialog(null,
			"Seleccione la unidad de temperaura ingresada", "Unidad de Temperatura", 
			JOptionPane.PLAIN_MESSAGE, null, new Object[] 
			{ "Grados Celsius - Cº", "Grados Fahrenheit", "Grados Kelvin","Grados Rabkine"}, 
			"Selección")).toString();
	
	String unidadSalida = (JOptionPane.showInputDialog(null,
			"Seleccione la unidad de temperaura a convertir", "Unidad de Temperatura", 
			JOptionPane.PLAIN_MESSAGE, null, new Object[] 
			{ "Grados Celsius - Cº", "Grados Fahrenheit", "Grados Kelvin","Grados Rabkine"}, 
			"Selección")).toString();
}
