package conversorMonedas;

import javax.swing.JOptionPane;

public class ConvertirMoneda {
	// valores al 07/01/2023
	public double dolar = 0;
	public void convertirPesosArgentino(double monto) {
		dolar = monto / 0.0056;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Pesos Argenmtinos equivalen a USD "+ dolar);
	}
	
	public void convertirGuarani(double monto) {
		dolar = monto / 0.0056;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Guaranies equivalen a USD "+ dolar);
	}
	
	public void convertirPesosUruguayodouble monto) {
		dolar = monto / 0.0056;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Pesos Uruguayos equivalen a USD "+ dolar);
	}
	
	public void convertirReal(double monto) {
		dolar = monto / 0.0056;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Reales equivalen a USD "+ dolar);
	}
	
}
