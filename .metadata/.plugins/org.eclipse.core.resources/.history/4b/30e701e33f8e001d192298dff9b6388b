package conversorMonedas;

import javax.swing.JOptionPane;

public class ConvertirMoneda {
	// valores al 07/01/2023
	public double dolar = 0;
	public void convertirPesoArgADolar(double monto) {
		dolar = monto / 179.25;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Pesos Argenmtinos equivalen a USD "+ dolar);
	}
	
	public void convertirPesosUrugADolar (double monto) {
		dolar = monto / 39.88;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Pesos Uruguayos equivalen a USD "+ dolar);
	}
	
	public void convertirRealADolar(double monto) {
		dolar = monto / 5.23;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Reales equivalen a USD "+ dolar);
	}
	
	public void convertirPesoArgAEuro(double monto) {
		dolar = monto / 191.15;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Pesos Argentinos equivalen a USD "+ dolar);
	}
	
	public void convertirPesosUrugAEuro (double monto) {
		dolar = monto / 42.53;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Pesos Uruguayos equivalen a USD "+ dolar);
	}
	
	public void convertirRealAEuro(double monto) {
		dolar = monto / 5.57;
		dolar = (double) Math.round(dolar * 100d)/100;
		JOptionPane.showMessageDialog(null, "Tus "+ monto +" Reales equivalen a USD "+ dolar);
	}
	
}
